#include <stdio.h>

int main() {
    int arr[10];
    for(int i=0; i<10; i++){ // 배열에 순서대로 짝수 삽입
        arr[i] = (i+1)*2;
    }
    for(int i=1; i<10; i+=2){ // 배열의 홀수 인덱스 번호에 들어있는 값 출력 
        printf("%d ",arr[i]);
    }
    printf("\n");

    for(int i=0; i<10; i+=2){ // 배열의 인덱스 번호를 2칸씩 이동하면서 출력
        printf("%d ",arr[i]);
    }
    printf("\n");
