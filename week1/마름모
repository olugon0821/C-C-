#include <stdio.h>

int main(){
int a,b,c,jump;
printf("수를 입력하시오 : ");
scanf("%d",&a);

if(a%2==0){
    printf("홀수를 입력하시오\n");
    return 1;
    }

for(b=1;b<=a;b+=2){
    for(jump=0; jump<(a-b)/2; jump++){
        printf(" "); 
    }
    for(c=0;c<b;c++){
        printf("*");
    }
    printf("\n");}

for(b=a-2;b>=1; b-=2){
    for(jump=0; jump<(a-b)/2; jump++){
        printf(" ");
    }
    for(c=0; c<b; c++){
        printf("*");
    }

printf("\n");
}

return 0;
}
